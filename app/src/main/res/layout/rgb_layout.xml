<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="72dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <ImageView
            android:id="@+id/image_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_margin="8dp"/>
        <com.appyvet.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebarR"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            custom:tickStart="0"
            custom:tickInterval="1"
            custom:tickEnd="255"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            custom:pinColor="@android:color/holo_red_dark"
            custom:tickColor="@android:color/holo_red_light"
            custom:connectingLineColor ="@android:color/holo_red_dark"
            />
        <ImageView
            android:id="@+id/image_g"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_margin="8dp"
            android:minHeight="200dp"/>
        <com.appyvet.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebarG"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            custom:tickStart="0"
            custom:tickInterval="1"
            custom:tickEnd="255"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            custom:pinColor="@android:color/holo_green_dark"
            custom:tickColor="@android:color/holo_green_light"
            custom:connectingLineColor ="@android:color/holo_green_dark"
            />
        <ImageView
            android:id="@+id/image_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_margin="8dp"
            android:minHeight="200dp"/>
        <com.appyvet.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebarB"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            custom:tickStart="0"
            custom:tickInterval="1"
            custom:tickEnd="255"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            />
    </LinearLayout>
</ScrollView>
